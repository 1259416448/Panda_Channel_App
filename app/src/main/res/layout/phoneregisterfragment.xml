<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_backgroud_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="海外用户暂不支持手机号注册，您可以使用邮箱注册"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/phone_et_phonenumber"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:hint="账号：请输入手机账号"
        android:background="#fff"/>

    <TextView
        android:id="@+id/hint_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/anred"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/phone_et_pictureyanzheng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_marginRight="15dp"
            android:hint="请输入图片验证码"
            android:background="#fff"/>

        <ImageView
            android:id="@+id/phone_yanzhengma_image"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"/>
    </LinearLayout>
        <TextView
            android:id="@+id/hint_imagecheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/anred"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/phone_et_receiveyanzheng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:hint="请输入收到的验证码"
            android:background="#fff"/>

        <Button
            android:id="@+id/phone_bt_getyanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="15dp"
            android:text="获取验证码"
            android:textColor="#fff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/phone_hint_phonecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/anred"
        android:visibility="gone"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/phone_et_password"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:hint="请输入密码"
        android:background="#fff"/>

    <TextView
        android:id="@+id/phone_hint_surepawd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/anred"
        android:visibility="gone"
        android:layout_marginLeft="20dp"/>
    <RadioButton
        android:id="@+id/register_shouji_radiobutton"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_marginTop="40dp"
        android:textSize="15dp"
        android:checked="true"
        android:drawablePadding="5dp"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/personal_check_img"
        android:text="我已阅读并同意《央视网网络服务使用协议》"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/phone_bt_register"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="16dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>