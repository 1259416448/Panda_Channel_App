<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e309378f">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/plus_img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/com_facebook_tooltip_black_xout"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/qihuanlanmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换栏目"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/long_an"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/qihuanlanmu"
            android:textColor="#fff"
            android:textSize="14dp"
            android:text="长按可以排序"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/popupwind_bt_bianji"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="编辑"
            android:layout_alignParentRight="true"
            android:background="#fff"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <com.example.demo.panda_channel.widget.view.MyGridView
        android:paddingLeft="20dp"
        android:gravity="center"
        android:verticalSpacing="20dp"
        android:numColumns="3"
        android:id="@+id/select_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    </com.example.demo.panda_channel.widget.view.MyGridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击添加更多栏目"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:textSize="18dp"/>

    <com.example.demo.panda_channel.widget.view.MyUnSelectGridView
        android:paddingLeft="20dp"
        android:gravity="center"
        android:verticalSpacing="20dp"
        android:numColumns="3"
        android:id="@+id/unselect_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    </com.example.demo.panda_channel.widget.view.MyUnSelectGridView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>