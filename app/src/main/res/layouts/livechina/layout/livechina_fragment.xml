<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_backgroud_color"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff">

        <android.support.design.widget.TabLayout
            android:id="@+id/live_china_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:tabSelectedTextColor="#3F51B5"
            app:tabIndicatorColor="#3F51B5">

        </android.support.design.widget.TabLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:background="@color/tab_backgroud_color" />

        <ImageView
            android:id="@+id/live_china_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/plus" />

    </LinearLayout>

    <com.example.demo.panda_channel.widget.view.CustomViewPager
        android:id="@+id/live_china_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>