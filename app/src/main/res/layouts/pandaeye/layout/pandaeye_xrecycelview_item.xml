<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/pandaeye_xrecyclerview_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/panda_eye_item_img"
        android:layout_width="180dp"
        android:layout_height="110dp" />
    <TextView
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:id="@+id/panda_eye_item_title"
        android:text="name"
        android:layout_toRightOf="@id/panda_eye_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/panda_eye_item_view"
        android:layout_below="@id/panda_eye_item_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9c9797"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/panda_eye_item_data"
        android:text="2017/7/13"
        android:layout_above="@id/panda_eye_item_view"
        android:layout_toRightOf="@id/panda_eye_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>