<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watchchat_name"
        android:text="央视网友"/>

    <TextView
        android:paddingTop="5dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="噗噗睡得可爱的要死！"
        android:textSize="16sp"
        android:layout_below="@id/watchchat_name"
        android:id="@+id/watchchat_content" />

    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="179382楼"
        android:id="@+id/watchchat_lou"
        android:background="#cfcfcf" />

    <TextView
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:layout_below="@id/watchchat_lou"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07-23-2017"
        android:id="@+id/watchchat_time" />



</RelativeLayout>